{
  "version": 2,
  "buildCommand": "pnpm install && bash scripts/build-unified.sh",
  "outputDirectory": ".vercel-output",
  "installCommand": "pnpm install",
  "framework": null,
  "rewrites": [
    {
      "source": "/storybook/:path*",
      "destination": "/storybook-static/:path*"
    },
    {
      "source": "/storybook",
      "destination": "/storybook-static/index.html"
    },
    {
      "source": "/test-npm",
      "destination": "/sandbox/index.html"
    },
    {
      "source": "/performance",
      "destination": "/sandbox/index.html"
    },
    {
      "source": "/sandbox/:path*",
      "destination": "/sandbox/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}

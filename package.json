{
	"name": "@figkit/design-system",
	"version": "0.1.0",
	"description": "A comprehensive design system with React components, design tokens, and Figma integration",
	"private": true,
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/Hazenbox/FigKit.git"
	},
	"keywords": [
		"design-system",
		"react",
		"components",
		"design-tokens",
		"figma",
		"storybook",
		"ui",
		"themes"
	],
	"author": "",
	"license": "ISC",
	"packageManager": "pnpm@10.11.0",
	"engines": {
		"node": ">=18.12.0",
		"pnpm": ">=9.0.0"
	},
	"scripts": {
		"build:tokens": "node packages/themes/build.js",
		"build": "pnpm -r build",
		"typecheck": "pnpm -r typecheck",
		"lint": "pnpm -r lint",
		"test": "pnpm -r test -- --runInBand",
		"test:a11y": "pnpm -r test -- --selectProjects a11y",
		"storybook:build": "pnpm --filter @figkit/docs build-storybook -o dist-storybook",
		"storybook:serve": "npx http-server dist-storybook -s -p 6006",
		"visual:test": "playwright test",
		"mcp:pull:tokens": "tsx packages/figma-mcp/scripts/pull-tokens-from-files.ts",
		"mcp:pull:tokens:legacy": "tsx packages/figma-mcp/scripts/pull-tokens.ts",
		"mcp:diff": "tsx packages/figma-mcp/scripts/diff-tokens.ts",
		"mcp:pull:component": "tsx packages/figma-mcp/scripts/pull-component.ts",
		"mcp:pull:icons": "tsx packages/figma-mcp/scripts/pull-icons.ts",
		"mcp:update:story": "tsx packages/figma-mcp/scripts/update-storybook.ts",
		"changeset": "changeset",
		"release:version": "changeset version && pnpm i --lockfile-only",
		"release:publish": "changeset publish",
		"release:canary": "changeset version --snapshot canary && pnpm i --lockfile-only && changeset publish --tag canary"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.7",
		"@playwright/test": "^1.56.1",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"http-server": "^14.1.1",
		"jest-axe": "^10.0.0",
		"jsdom": "^27.1.0",
		"tsup": "^8.5.0",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vitest": "^4.0.8"
	},
	"dependencies": {
		"axios": "^1.13.2",
		"dotenv": "^17.2.3",
		"fast-deep-equal": "^3.1.3",
		"picocolors": "^1.1.1",
		"style-dictionary": "^5.1.1",
		"zod": "^4.1.12"
	}
}
